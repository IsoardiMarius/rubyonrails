<!--Ici c'est la page qui permet de mofidier un poste-->
<style>
    .fixed-top {
        position: initial;
    }
</style>
<!-- On créer un formulaire, f nous donne accès à tous les champs du post en question-->
<%= form_for @post do |f| %>

  <div class=" center mt-5 form-grp" >

    <h1>Créer un post</h1>
    <svg class="m-5 bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text></svg>
    <div class="form-group col-sm-6">
      <!--    Ici on affiche le titre du post en question-->
      <%= f.label :title %>
      <!--    Ici on permet à l'utilisateur de modifier le titre du post-->
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mt-3 form-group col-sm-6">
      <!--    Ici on affiche le contenu du post en question-->
      <%= f.label :content %>
      <!--    Ici on permet à l'utilisateur de modifier le content du post-->
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <p><%= @post.updated_at %></p>

    <div class="btn-group">
      <p>
        <a href="<%= posts_path %>" class="mt-3 btn btn-primary ">Revenir en arrière</a>
        <!--    Ici on affiche le bouton pour modifier le post qui est relier à la méthode update du controller post-->
        <%= f.submit ("Créer"), class: "mt-3 btn btn-primary " %>
      </p>
    </div>

    <hr class="featurette-divider">



  </div><!-- /.col-lg-4 -->
<% end %>


