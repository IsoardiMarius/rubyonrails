
<!-- On créer un formulaire, f nous donne accès à tous les champs du post en question-->
<%= form_for @post do |f| %>
  <div class=" center mt-28 mb-64">
    <div class="max-w-sm rounded overflow-hidden shadow-lg">
      <img class="w-full" src="https://images2.alphacoders.com/475/thumb-1920-475841.jpg" alt="Sunset in the mountains">
      <div class="px-6 py-4">

        <div class="font-bold text-xl mb-2 border-red-200 outline-red-200	"><%= f.text_field :title, class: "text-center border-red-200 outline-red-200		" %></div>
        <div class="text-sm mb-2 border-red-200 outline-red-200	"><%= f.text_area :content, class: "text-center border-red-200 outline-red-200		" %></div>


        <a href="<%= posts_path %>" class="inline-block px-6 py-2.5 bg-gray-800 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-gray-900 hover:shadow-lg focus:bg-gray-900 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-900 active:shadow-lg transition duration-150 ease-in-out ">Back</a>
        <%= f.submit ("Edit"), class: "cursor-pointer inline-block px-6 py-2.5 bg-sky-800 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-800	hover:shadow-lg focus:bg-sky-800 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-b-700 active:shadow-lg transition duration-150 ease-in-out" %>
<% end %>
      </div>
      <div class="px-6 pt-4 pb-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#photography</span>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#travel</span>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#winter</span>
      </div>
    </div>
  </div><!-- /.col-lg-4 -->


