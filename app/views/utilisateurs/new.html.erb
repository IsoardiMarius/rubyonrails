<style>
  .fixed-top {
      position: initial;
  }
</style>

<!--Create a form ruby on rails, for create a new user, and verify if password correspond to confirm password-->




<%= form_for @utilisateurs do |f| %>
<div class="bg-gray-50">
<div class="bg-grey-lighter min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center">Sign up</h1>
      <%= f.text_field :first_name, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Firstname" %>

      <%= f.text_field :last_name, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Lastname" %>

      <%= f.text_field :username, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Username" %>

      <%= f.text_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Email" %>

      <%= f.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Password" %>

      <%= f.submit "Create Utilisateur", class: "w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-dark focus:outline-none my-1" %>


      <div class="text-center text-sm text-stone-500 mt-4">
        By signing up, you agree to the
        <a class="no-underline border-b border-grey-dark-500 text-stone-500" href="#">
          Terms of Service
        </a> and
        <a class="no-underline border-b border-grey-dark-500 text-stone-500" href="#">
          Privacy Policy
        </a>
      </div>
    </div>

    <div class="text-stone-500 mt-6">
      Already have an account?
      <a class="no-underline border-b border-blue-500 text-blue-500" href="../login/">
        Log in
      </a>.
    </div>
  </div>
</div>
</div>
<% end %>
